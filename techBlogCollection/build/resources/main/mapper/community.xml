<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.amur.community.model.mapper.CommunityMapper">
    <resultMap type="communityDto" id="article" >

        <result column="board_id" property="boardId"/>
        <result column="title" property="title"/>
        <result column="member_id" property="memberId"/>
        <result column="content" property="content"/>
        <result column="like_count" property="likeCount"/>
        <result column="read_count" property="readCount"/>
        <result column="regist_time" property="registerTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="type" property="type"/>
    </resultMap>

    <insert id="writeArticle" parameterType="communityDto">
        insert into board (board_id, title,member_id,content,regist_time,type)
        values (1,#{title},#{memberId},#{content}, now(),0)
    </insert>

</mapper>
